# Google Gemini API Key (Required for AI features)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# EmailJS Configuration (For Email Notifications)
# Get your keys from: https://www.emailjs.com/
VITE_EMAILJS_SERVICE_ID=your_service_id
VITE_EMAILJS_TEMPLATE_ID=your_template_id
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# Backend API URLs (Optional - if using your own backend)
VITE_BACKEND_API_URL=https://your-backend.com/api/send-email
VITE_BACKEND_SMS_API_URL=https://your-backend.com/api/send-sms

# Twilio SMS Configuration (International SMS)
# Get your credentials from: https://www.twilio.com/
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=your_twilio_phone_number

# MSG91 SMS Configuration (India-specific SMS)
# Get your credentials from: https://msg91.com/
VITE_MSG91_AUTH_KEY=your_msg91_auth_key
VITE_MSG91_SENDER_ID=HEALBD

# Fast2SMS Configuration (India budget option)
# Get your API key from: https://www.fast2sms.com/
VITE_FAST2SMS_API_KEY=your_fast2sms_api_key
